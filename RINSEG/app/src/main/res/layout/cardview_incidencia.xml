<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="2dp"
    android:layout_marginEnd="5dp"
    android:layout_marginStart="5dp"
    card_view:cardUseCompatPadding="true"
    android:background="@color/colorWhite">

    <LinearLayout
        android:id="@+id/linearlayout_card_incidencia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp">

        <ImageView
            android:id="@+id/img_card_view_incidencia_riesgo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/backgorund_circle_gradient"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="2dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="start|center_vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/txt_card_view_incidencia_nombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="nombre"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"/>

            <TextView
                android:id="@+id/txt_card_view_incidencia_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/colorGray"
                android:ellipsize="marquee"
                android:maxLines="2"/>

        </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>

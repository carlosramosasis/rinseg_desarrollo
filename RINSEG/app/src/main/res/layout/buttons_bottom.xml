<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_buttons_bottom"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/background_buttons_bottom"

    android:layout_gravity="bottom"
    android:orientation="vertical"
    android:layout_marginBottom="0dp"
    android:visibility="gone"
    android:layout_alignParentBottom="true"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/colorAccent"
        >
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/btn_left"
            android:background="@drawable/ripple_buttons_bottom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/btn_atras"
            android:drawableLeft="@drawable/ic_chevron_left_black_24dp"
            android:textColor="@color/colorPrimaryDark"
            android:paddingLeft="35dp"
            android:paddingRight="35dp"
            android:textSize="15dp"
            />

        <Button
            android:id="@+id/btn_right"
            android:background="@drawable/ripple_buttons_bottom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/btn_ccontinuar"
            android:drawableRight="@drawable/ic_chevron_right_black_24dp"
            android:textColor="@color/colorPrimaryDark"
            android:paddingLeft="35dp"
            android:paddingRight="35dp"
            android:textSize="15dp"
            />
    </LinearLayout>


</LinearLayout>
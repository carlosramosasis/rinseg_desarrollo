<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSecondary1"
    android:scrollbars="vertical"
    tools:context="rinseg.asistp.com.ui.fragments.FragmentLevantarAccionPreventiva">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical"
                android:scrollbars="vertical"
                android:paddingBottom="80dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Responsable:"
                    android:textColor="@color/colorGray"
                    android:textSize="16dp" />
                <TextView
                    android:id="@+id/rrd_txt_responsable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="11dp"
                    android:layout_marginLeft="15dp"
                    android:text="@string/rop_c1_texto_default"
                    android:textColor="@color/colorGray"
                    android:textSize="17dp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/rrd_txt_accion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="15dp"
                    android:text="@string/rop_c1_texto_default"
                    android:textColor="@color/colorGray"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fecha límite:"
                    android:textColor="@color/colorGray"
                    android:textSize="16dp" />
                <TextView
                    android:id="@+id/rrd_txt_fecha_limite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="11dp"
                    android:layout_marginLeft="15dp"
                    android:text="@string/rop_c1_texto_default"
                    android:textColor="@color/colorGray"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <CheckBox
                    android:id="@+id/rrd_chk_se_valido"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Se validó la acción preventiva"
                    />

            </LinearLayout>

        </ScrollView>
        <LinearLayout
            android:id="@+id/linear_buttons_bottom"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/background_buttons_bottom"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:layout_marginBottom="0dp"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/colorAccent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/rrd_btn_guardar"
                    android:background="@drawable/ripple_buttons_bottom"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/btn_guardar"
                    android:drawableEnd="@drawable/ic_save"
                    android:textColor="@color/colorPrimaryDark"
                    android:paddingLeft="35dp"
                    android:paddingRight="35dp"
                    android:textSize="15dp"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right"
        android:layout_marginBottom="50dp"
        >
        <include layout="@layout/button_menu_rop"></include>
    </LinearLayout>

</FrameLayout>

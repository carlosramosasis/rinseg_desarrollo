<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="2dp"
    card_view:cardUseCompatPadding="true"
    android:layout_marginEnd="5dp"
    android:layout_marginStart="5dp"
    android:background="@color/colorWhite">

    <LinearLayout
        android:id="@+id/linearlayout_card_inspecciones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:orientation="vertical"
            android:gravity="start|center_vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/txt_card_view_cod_inspeccion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="nombre"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"/>
            <TextView
                android:id="@+id/txt_card_view_are_inspeccion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="nombre"
                android:textSize="16sp"
                android:textColor="@color/colorGray"/>

            <TextView
                android:id="@+id/txt_card_view_fec_crea_inspeccion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23/34/34"
                android:textSize="13sp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/backgorund_circle_green"
                    android:elevation="2dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"
                    />
                <TextView
                    android:id="@+id/txt_card_view_valor_verde"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13"
                    android:textColor="@color/colorGray"
                    android:layout_marginRight="10dp"
                    />
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/backgorund_circle_yellow"
                    android:elevation="2dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"
                    />
                <TextView
                    android:id="@+id/txt_card_view_valor_amarillo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13"
                    android:textColor="@color/colorGray"
                    android:layout_marginRight="5dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/backgorund_circle_orange"
                    android:elevation="2dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"
                    />
                <TextView
                    android:id="@+id/txt_card_view_valor_naranja"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13"
                    android:textColor="@color/colorGray"
                    android:layout_marginRight="10dp"
                    />
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/backgorund_circle_rojo"
                    android:elevation="2dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"
                    />
                <TextView
                    android:id="@+id/txt_card_view_valor_rojo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13"
                    android:textColor="@color/colorGray"
                    android:layout_marginRight="5dp"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:paddingRight="6dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="4dp"
                >
                <ImageView
                    android:layout_width="23dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_rop_close"
                    />
                <TextView
                    android:id="@+id/txt_card_view_valor_cerrados"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="23"
                    android:textColor="@color/colorGray"
                    android:textSize="19dp"
                    android:layout_marginRight="7dp"
                    />
                <ImageView
                    android:layout_width="23dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_rop_open"
                    />
                <TextView

                    android:id="@+id/txt_card_view_valor_abiertos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="23"
                    android:textColor="@color/colorGray"
                    android:textSize="19dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="total:"
                    />
                <TextView
                    android:id="@+id/txt_card_view_valor_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="200"
                    android:textColor="@color/colorGray"
                    android:textSize="19dp"
                    />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>



</android.support.v7.widget.CardView>

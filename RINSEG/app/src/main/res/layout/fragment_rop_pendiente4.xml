<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSecondary1"
    android:scrollbars="vertical"
    tools:context="rinseg.asistp.com.ui.fragments.FragmentROPPendiente4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="6dp"
                android:orientation="vertical"
                android:scrollbars="vertical"
                android:paddingBottom="80dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/datos_reportante"
                    android:textColor="@color/colorGray"
                    android:textSize="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="14dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/usuario_hint"
                        android:textColor="@color/colorGray"
                        android:textSize="14dp"
                        android:layout_marginRight="8dp"
                        />
                    <TextView
                        android:id="@+id/txt_view_rop_p4_usuario"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/usuario_hint"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="16dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="14dp"
                    android:layout_marginBottom="20dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/empresa_rop4"
                        android:textColor="@color/colorGray"
                        android:textSize="14dp"
                        android:layout_marginRight="8dp"
                        />
                    <TextView
                        android:id="@+id/txt_view_rop_p4_empresa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/empresa_rop4"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="16dp"
                        />
                </LinearLayout>
               <!-- <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="______________________________"
                        android:textColor="@color/colorGray"
                        android:textSize="14dp"
                        android:layout_marginRight="8dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/firma_minuscula"
                        android:textColor="@color/colorGray"
                        android:textSize="14dp"
                        android:layout_marginRight="8dp"
                        />
                </LinearLayout>-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/supervisor_a_cargo"
                    android:textColor="@color/colorGray"
                    android:textSize="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_nompre_rop4"
                    android:layout_marginLeft="14dp"
                    android:textColor="@color/colorGray"
                    android:textSize="12dp" />
                <EditText
                    android:id="@+id/txt_rop_p4_nombre_supervisor"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginBottom="8dp"
                    android:background="@color/colorWhite"
                    android:layout_marginLeft="14dp"
                    android:drawableRight="@drawable/ic_pencil"
                    android:elevation="2dp"
                    android:hint="@string/hint_nombre"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingLeft="23dp"
                    android:paddingRight="15dp"
                    android:textColor="@color/colorPrimary"
                    android:textColorHint="@color/colorSecondary0"
                    android:textSize="17.3dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_empresa_rop4"
                    android:layout_marginLeft="14dp"
                    android:textColor="@color/colorGray"
                    android:textSize="12dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginBottom="8dp"
                    android:background="@color/colorWhite"
                    android:elevation="2dp"
                    android:paddingRight="12dp"
                    android:orientation="vertical"
                    android:layout_marginLeft="14dp"
                    >
                    <Spinner
                        android:id="@+id/spinner_rop_p4_empresa"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:textSize="17.3dp"
                        >
                    </Spinner>

                </LinearLayout>
               <!-- <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="14dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="______________________________"
                        android:textColor="@color/colorGray"
                        android:textSize="14dp"
                        android:layout_marginRight="8dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/firma_minuscula"
                        android:textColor="@color/colorGray"
                        android:textSize="14dp"
                        android:layout_marginRight="8dp"
                        />
                </LinearLayout>-->

                <TextView
                    android:gravity="center_horizontal"
                    android:layout_marginLeft="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/requiere_investigacion"
                    />
                <RadioGroup
                    android:id="@+id/rbt_group_requiere_investigacion"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="14dp"
                    android:layout_gravity="center_horizontal"
                    >
                    <RadioButton
                        android:id="@+id/rbt_rop4_si"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/si"
                        android:textSize="14dp"
                        android:layout_marginRight="7dp"
                        />
                    <RadioButton
                        android:id="@+id/rbt_rop4_no"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/no"
                        android:layout_marginLeft="7dp"
                        />

                </RadioGroup>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>
    <include layout="@layout/button_menu_rop"></include>

</FrameLayout>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSecondary1"
    android:scrollbars="vertical"
    tools:context="rinseg.asistp.com.ui.fragments.FragmentIncidenciaNuevo1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="6dp"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:scrollbars="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/inscidencia_nuevo1_hint_tipo"
                    android:textColor="@color/colorGray"
                    android:textSize="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginBottom="8dp"
                    android:background="@color/colorWhite"
                    android:elevation="2dp"
                    android:orientation="vertical"
                    android:paddingRight="12dp">

                    <Spinner
                        android:id="@+id/spinner_incidencia_1_tipo_incidencia"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:textSize="17.3dp"></Spinner>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hint_descr"
                    android:textColor="@color/colorGray"
                    android:textSize="12dp" />

                <EditText
                    android:id="@+id/text_incidencia_1_descripcion"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:height="100dp"
                    android:background="@color/colorWhite"
                    android:drawableRight="@drawable/ic_pencil"
                    android:elevation="2dp"
                    android:gravity="top|left"
                    android:hint="@string/hint_descr"
                    android:inputType="textMultiLine|textCapSentences"
                    android:minLines="5"
                    android:nextFocusLeft="@id/text_incidencia_1_descripcion"
                    android:nextFocusUp="@id/text_incidencia_1_descripcion"
                    android:padding="4dp"
                    android:paddingBottom="7dp"
                    android:paddingLeft="23dp"
                    android:paddingRight="15dp"
                    android:paddingTop="11dp"
                    android:scrollbars="vertical"
                    android:textColorHint="@color/colorSecondary0"
                    android:textSize="17.3dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/inscidencia_nuevo1_hint_frecuencia"
                    android:textColor="@color/colorGray"
                    android:textSize="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginBottom="8dp"
                    android:background="@color/colorWhite"
                    android:elevation="2dp"
                    android:orientation="vertical"
                    android:paddingRight="12dp">

                    <Spinner
                        android:id="@+id/spinner_incidencia_1_frecuencia"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:textSize="17.3dp"></Spinner>

                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/inscidencia_nuevo1_hint_severidad"
                    android:textColor="@color/colorGray"
                    android:textSize="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginBottom="8dp"
                    android:background="@color/colorWhite"
                    android:elevation="2dp"
                    android:orientation="vertical"
                    android:paddingRight="12dp">

                    <Spinner
                        android:id="@+id/spinner_incidencia_1_severidad"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:textSize="17.3dp"></Spinner>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.5"
                        android:text="@string/inscidencia_nuevo1_hint_categoria_riesgo"
                        android:textColor="@color/colorGray"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/txt_incidencia_1_categoria_riesgo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/rop_c1_texto_default"
                        android:textColor="@color/colorGray"
                        android:textSize="17dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.5"
                        android:text="@string/inscidencia_nuevo1_hint_nivel_riesgo"
                        android:textColor="@color/colorGray"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/txt_incidencia_1_nivel_riesgo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/rop_c1_texto_default"
                        android:textColor="@color/colorGray"
                        android:textSize="17dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="11dp"
                    android:background="@drawable/background_progresbar_riesgo"
                    android:padding="8dp"
                    android:elevation="2dp">
                    <ProgressBar
                        android:layout_gravity="center"
                        android:id="@+id/progress_incidencia_1_riesgo"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:progressDrawable="@drawable/progressbar_green"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/inscidencia_nuevo1_hint_campo_afectacion"
                    android:textColor="@color/colorGray"
                    android:textSize="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginBottom="8dp"
                    android:background="@color/colorWhite"
                    android:elevation="2dp"
                    android:orientation="vertical"
                    android:paddingRight="12dp">

                    <Spinner
                        android:id="@+id/spinner_incidencia_1_blanco"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:textSize="17.3dp"></Spinner>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/inscidencia_nuevo1_hint_fecha_limite"
                    android:textColor="@color/colorGray"
                    android:textSize="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_incidencia_1_fecha"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_marginBottom="8dp"
                        android:layout_weight="1"
                        android:background="@color/colorWhite"
                        android:elevation="2dp"
                        android:gravity="center"
                        android:hint="@string/inscidencia_nuevo1_hint_fecha_limite"
                        android:maxLines="1"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:textColor="@color/colorPrimary"
                        android:textColorHint="@color/colorSecondary0"
                        android:textSize="17dp" />

                    <ImageButton
                        android:id="@+id/btn_incidencia_1_calendar"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@color/colorSecondary"
                        android:elevation="2dp"
                        android:src="@drawable/ic_calendar">

                    </ImageButton>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>


</FrameLayout>

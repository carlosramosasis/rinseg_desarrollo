<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSecondary1"
    android:scrollbars="vertical"
    tools:context="rinseg.asistp.com.ui.fragments.FragmentLevantarIncidencia">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical"
                android:scrollbars="vertical"
                android:paddingBottom="10dp"
                >

                <TextView
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/lev_incidencia_datos_levantamiento"
                    android:textColor="@color/colorGray"
                    android:textSize="18dp"
                    android:layout_marginBottom="8dp"
                    />



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lev_incidencia_fecha"
                        android:textColor="@color/colorGray"
                        android:textSize="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp"
                    android:elevation="2dp"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:background="@color/colorWhite"
                        android:gravity="center"
                        android:hint="@string/lev_incidencia_fecha"
                        android:maxLines="1"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:textColor="@color/colorPrimary"
                        android:textColorHint="@color/colorSecondary0"
                        android:textSize="17dp" />
                    <ImageButton
                        android:id="@+id/btn_lev_calendar"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@color/colorSecondary"
                        android:src="@drawable/ic_calendar">

                    </ImageButton>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lev_incidencia_estatus"
                    android:textColor="@color/colorGray"
                    android:textSize="12dp" />

                <com.jaredrummler.materialspinner.MaterialSpinner
                    android:id="@+id/spinner4"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginBottom="8dp"
                    android:background="@color/colorWhite"
                    android:elevation="2dp"
                    android:hint="@string/lev_incidencia_estatus"
                    android:textColorHint="@color/colorSecondary0"
                    android:textSize="17.3dp"
                    app:ms_arrow_tint="@color/colorPrimaryDark" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lev_incidencia_control_operacional"
                    android:textColor="@color/colorGray"
                    android:textSize="12dp" />
                <EditText
                    android:id="@+id/text_input_usuariod"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:height="100dp"
                    android:background="@color/colorWhite"
                    android:drawableRight="@drawable/ic_pencil"
                    android:elevation="2dp"
                    android:hint="@string/lev_incidencia_control_operacional"
                    android:inputType="textMultiLine"
                    android:maxLines="10"
                    android:paddingBottom="7dp"
                    android:paddingLeft="23dp"
                    android:paddingRight="15dp"
                    android:paddingTop="11dp"
                    android:scrollbars="vertical"
                    android:textColorHint="@color/colorSecondary0"
                    android:textSize="17.3dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"

                    android:layout_marginBottom="10dp"
                    android:background="@color/colorAccentDark2">

                </LinearLayout>

                <TextView
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/lev_incidencia_potencial_residual"
                    android:textColor="@color/colorGray"
                    android:textSize="18dp"
                    android:layout_marginBottom="8dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp"
                    >
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/inscidencia_nuevo1_hint_frecuencia"
                            android:textColor="@color/colorGray"
                            android:textSize="12dp" />

                        <com.jaredrummler.materialspinner.MaterialSpinner
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginBottom="8dp"
                            android:background="@color/colorWhite"
                            android:elevation="2dp"
                            android:hint="@string/inscidencia_nuevo1_hint_frecuencia"
                            android:textColorHint="@color/colorSecondary0"
                            android:textSize="17.3dp"
                            app:ms_arrow_tint="@color/colorPrimaryDark" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginLeft="10dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/inscidencia_nuevo1_hint_severidad"
                            android:textColor="@color/colorGray"
                            android:textSize="12dp" />

                        <com.jaredrummler.materialspinner.MaterialSpinner
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginBottom="8dp"
                            android:background="@color/colorWhite"
                            android:elevation="2dp"
                            android:hint="@string/inscidencia_nuevo1_hint_severidad"
                            android:textColorHint="@color/colorSecondary0"
                            android:textSize="17.3dp"
                            app:ms_arrow_tint="@color/colorPrimaryDark" />

                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lev_incidencia_cat_nivel_riesgo"
                    android:textColor="@color/colorGray"
                    android:textSize="14dp"
                    android:layout_marginBottom="4dp"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal"
                    android:paddingTop="10dp"
                    android:paddingBottom="15dp"
                    android:paddingLeft="25dp"
                    android:paddingRight="25dp"
                    android:background="@drawable/border_cat_nivel_riesgo"
                    android:elevation="3dp"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="MEDIO"
                        android:gravity="center"
                        android:paddingBottom="3dp"
                        android:textSize="14dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="123"
                        android:gravity="center"
                        android:textSize="13dp"
                        />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/linear_buttons_bottom"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/background_buttons_bottom"

            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:layout_marginBottom="0dp"
            android:visibility="visible"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/colorAccent"
                >
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <Button
                    android:id="@+id/btn_cancelar"
                    android:background="@drawable/ripple_buttons_bottom"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/btn_cancelar"
                    android:drawableLeft="@drawable/ic_chevron_left_black_24dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:paddingLeft="35dp"
                    android:paddingRight="35dp"
                    android:textSize="15dp"
                    />

                <Button
                    android:id="@+id/btn_grabar"
                    android:background="@drawable/ripple_buttons_bottom"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/btn_grabar"
                    android:drawableRight="@drawable/ic_save"
                    android:textColor="@color/colorPrimaryDark"
                    android:paddingLeft="35dp"
                    android:paddingRight="35dp"
                    android:textSize="15dp"
                    />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>


</FrameLayout>

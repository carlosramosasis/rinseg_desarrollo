<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSecondary1"
    android:scrollbars="vertical"
    tools:context="rinseg.asistp.com.ui.fragments.FragmentROPPendiente1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical"
                android:scrollbars="vertical"
                android:paddingBottom="10dp"
                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hint_potencial_perdida"
                    android:textColor="@color/colorGray"
                    android:textSize="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginBottom="8dp"
                    android:background="@color/colorWhite"
                    android:elevation="2dp"
                    android:paddingRight="12dp"
                    android:orientation="vertical"
                    >
                    <Spinner
                        android:id="@+id/spinner_rop_p1_potencial_perdida"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:textSize="17.3dp"
                        >
                    </Spinner>

                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hint_tipo_evento"
                    android:textColor="@color/colorGray"
                    android:textSize="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginBottom="8dp"
                    android:background="@color/colorWhite"
                    android:elevation="2dp"
                    android:paddingRight="12dp"
                    >
                    <Spinner
                        android:id="@+id/spinner_rop_p1_tipo_evento"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:textSize="17.3dp"
                        >
                    </Spinner>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hint_blanco"
                    android:textColor="@color/colorGray"
                    android:textSize="12dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginBottom="8dp"
                    android:background="@color/colorWhite"
                    android:elevation="2dp"
                    android:paddingRight="12dp"
                    >
                    <Spinner
                        android:id="@+id/spinner_rop_p1_blanco"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:textSize="17.3dp"
                        >
                    </Spinner>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hint_area_respon"
                    android:textColor="@color/colorGray"
                    android:textSize="12dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginBottom="8dp"
                    android:background="@color/colorWhite"
                    android:elevation="2dp"
                    android:paddingRight="12dp"
                    >
                    <Spinner
                        android:id="@+id/spinner_rop_p1_area_resp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:textSize="17.3dp"
                        >
                    </Spinner>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hint_lugar_exacto"
                    android:textColor="@color/colorGray"
                    android:textSize="12dp" />

                <EditText
                    android:id="@+id/txt_rop_p1_lugar_exacto"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginBottom="8dp"
                    android:background="@color/colorWhite"
                    android:drawableEnd="@drawable/ic_pencil"
                    android:elevation="2dp"
                    android:hint="@string/hint_lugar_exacto"
                    android:inputType="text|textCapSentences"
                    android:maxLines="1"
                    android:paddingStart="23dp"
                    android:paddingEnd="15dp"
                    android:textColor="@color/colorPrimary"
                    android:textColorHint="@color/colorSecondary0"
                    android:textSize="17.3dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hint_empresa"
                    android:textColor="@color/colorGray"
                    android:textSize="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginBottom="8dp"
                    android:background="@color/colorWhite"
                    android:elevation="2dp"
                    android:paddingRight="12dp"
                    >
                    <Spinner
                        android:id="@+id/spinner_rop_p1_empresa"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:textSize="17.3dp"
                        >
                    </Spinner>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    >

                    <LinearLayout

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/hint_fecha"
                            android:textColor="@color/colorGray"
                            android:textSize="12dp" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"

                            >
                            <TextView
                                android:id="@+id/txt_rop_p1_fecha"
                                android:elevation="2dp"
                                android:layout_width="0dp"
                                android:layout_height="45dp"
                                android:layout_weight="4"
                                android:background="@color/colorWhite"
                                android:gravity="center"
                                android:hint="@string/hint_fecha"
                                android:maxLines="1"
                                android:paddingLeft="6dp"
                                android:paddingRight="6dp"
                                android:textColor="@color/colorPrimary"
                                android:textColorHint="@color/colorSecondary0"
                                android:textSize="13dp"
                                android:layout_marginBottom="8dp"
                                />

                            <ImageButton
                                android:id="@+id/btn_rpo_p1_calendar"
                                android:elevation="2dp"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:background="@color/colorSecondary"
                                android:src="@drawable/ic_calendar">

                            </ImageButton>
                        </LinearLayout>


                    </LinearLayout>


                    <android.support.v4.widget.Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.2" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/hint_hora"
                            android:textColor="@color/colorGray"
                            android:textSize="12dp" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:id="@+id/txt_rop_p1_hora"
                                android:elevation="2dp"
                                android:layout_width="0dp"
                                android:layout_height="45dp"
                                android:layout_weight="4"
                                android:background="@color/colorWhite"
                                android:gravity="center"
                                android:hint="@string/hint_hora"
                                android:maxLines="1"
                                android:paddingLeft="6dp"
                                android:paddingRight="6dp"
                                android:textColor="@color/colorPrimary"
                                android:textColorHint="@color/colorSecondary0"
                                android:textSize="13dp"
                                android:layout_marginBottom="8dp"
                                />

                            <ImageButton
                                android:id="@+id/btn_rop_p1_hora"
                                android:elevation="2dp"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:background="@color/colorSecondary"
                                android:src="@drawable/ic_clock">

                            </ImageButton>
                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hint_descr"
                    android:textColor="@color/colorGray"
                    android:textSize="12dp" />
                <EditText
                    android:id="@+id/txt_rop_p1_desc"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:height="100dp"
                    android:background="@color/colorWhite"
                    android:drawableEnd="@drawable/ic_pencil"
                    android:elevation="2dp"
                    android:hint="@string/hint_descr"
                    android:inputType="textMultiLine"
                    android:maxLines="10"
                    android:paddingBottom="7dp"
                    android:paddingStart="23dp"
                    android:paddingEnd="15dp"
                    android:paddingTop="11dp"
                    android:scrollbars="vertical"
                    android:textColorHint="@color/colorSecondary0"
                    android:textSize="17.3dp" />


            </LinearLayout>
        </ScrollView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:visibility="gone"
            >

            <Button
                android:id="@+id/button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:backgroundTint="@color/colorSecondary0"
                android:drawableLeft="@drawable/ic_left_circle"
                android:text="@string/btn_cancelar" />

            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2" />

            <Button
                android:id="@+id/btn_rop_continuar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:backgroundTint="@color/colorAccent"
                android:drawableRight="@drawable/ic_right_circle"
                android:text="@string/btn_ccontinuar"
                android:textColor="@color/colorWhite" />

        </LinearLayout>

    </LinearLayout>


</FrameLayout>
